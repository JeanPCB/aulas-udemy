		System.out.println("Digite o valor do seu salÃ¡rio:");
		salary = sc.nextDouble();
		sc.close();
		
		if(salary > 2000.00) {
			calcAmount = salary - 2000.00;
			
			if(salary < 3000.00) {
				tax = calcAmount * 0.08;
			} else if(salary < 4500.00) {
				tax = calcAmount * 0.08 + calcAmount * 0.18;
			} else {
				
			}
		}
	}
}
