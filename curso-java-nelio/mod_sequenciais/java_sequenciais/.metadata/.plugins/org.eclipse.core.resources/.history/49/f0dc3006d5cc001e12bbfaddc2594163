package entrada_dados_1;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {		
		Scanner sc = new Scanner(System.in);
		
		String name;
		int registerNum;
		double accountBalance;
		
		System.out.println("Qual o seu nome? ");
		name = sc.nextLine();
		System.out.println("Qual seu número de matrícula? ");
		registerNum = sc.nextInt();
		System.out.println("Qual o seu saldo? ");
		accountBalance = sc.nextDouble();
		
		System.out.printf("Seu saldo: %.2f%n", accountBalance);
		System.out.println("Sua matrícula: " + registerNum);
		System.out.println("Seu nome: " + name);
		
		sc.close();
	}
}
